@page "/login"
@using System.ComponentModel.DataAnnotations
@using TestArtem.Components.Layout
@using TestArtem.Components.Services
@inject NavigationManager NavigationManager
@inject AuthService AuthService

<PageTitle>Login</PageTitle>

<h1>Anmeldung</h1>
<div class="row justify-content-md-center">
    <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin" class="col-lg-6">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="username">Benutzername</label>
            <InputText id="username"
                       class="form-control"
                       @bind-Value="@loginModel.Username" />
            <ValidationMessage For="@(() => loginModel.Username)" />
        </div>
        <div class="form-group">
            <label for="password">Kennwort</label>
            <InputText id="password"
                       type="password"
                       class="form-control"
                       @bind-Value="@loginModel.Password" />
            <ValidationMessage For="@(() => loginModel.Password)" />
        </div>
        <div class="form-group form-check pl-0 d-flex align-items-center" style="gap:20px">
            <label class="switch">
                <InputCheckbox @bind-Value="@loginModel.RememberMe" />
                <span class="slider round"></span>
            </label>
            <p class="d-inline-block mb-0">Bleiben Sie eingeloggt</p>
        </div>
        @if (loginModel.InvalidLogin)
        {
            <div class="text-danger text-center mb-3">Benutzername oder Kennwort ist falsch.</div>
        }
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary shadow-lg">Anmelden</button>
        </div>
    </EditForm>
</div>

@code {
    private LoginModel loginModel = new LoginModel(); // Инициализация модели логина
    private EditContext editContext;

    protected override void OnInitialized()
    {
        editContext = new EditContext(loginModel); // Инициализация контекста редактирования
    }

    private void HandleLogin()
    {
        editContext.Validate(); // Валидация формы

        if (editContext.GetValidationMessages().Any())
        {
            return; // Если есть ошибки валидации, выходим
        }

        try
        {
            AuthService.Login(loginModel.Username, loginModel.Password); // Попытка входа
            NavigationManager.NavigateTo("/home"); // Перенаправление на главную страницу
        }
        catch
        {
            loginModel.InvalidLogin = true; // Установка флага ошибки
            editContext.NotifyValidationStateChanged(); // Уведомление о изменении состояния валидации
        }
    }

    public class LoginModel
    {
        [Required(ErrorMessage = "Benutzername ist erforderlich.")]
        public string Username { get; set; } = string.Empty;

        [Required(ErrorMessage = "Kennwort ist erforderlich.")]
        public string Password { get; set; } = string.Empty;

        public bool RememberMe { get; set; }

        public bool InvalidLogin { get; set; } // Флаг для отображения ошибки входа
    }
}
